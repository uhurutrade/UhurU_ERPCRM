# Database (for local development)
DATABASE_URL="postgresql://uhuru_user:uhuru_password@localhost:5432/uhuru_db?schema=public"
POSTGRES_USER=uhuru_user
POSTGRES_PASSWORD=uhuru_password
POSTGRES_DB=uhuru_db

# Auth (CHANGE THESE IN PRODUCTION)
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="super_secure_random_string_here_change_me"
TRUSTED_HOSTS="http://localhost:3000"
AUTH_GOOGLE_ID="placeholder_google_id"
