generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  role          String    @default("USER")
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  accounts      Account[]
  sessions      Session[]
  tasks         Task[]    @relation("AssignedTo")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Organization {
  id         String    @id @default(cuid())
  name       String
  sector     String?
  website    String?
  address    String?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  bankIban   String?
  bankName   String?
  bankSwift  String?
  isBillable Boolean   @default(false)
  legalName  String?
  taxId      String?
  contacts   Contact[]
  deals      Deal[]
  invoices   Invoice[]
}

model Contact {
  id             String        @id @default(cuid())
  name           String
  email          String?
  phone          String?
  role           String?
  organizationId String?
  isClient       Boolean       @default(false)
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  bankIban       String?
  isBillable     Boolean       @default(false)
  legalName      String?
  taxId          String?
  linkedin       String?
  website        String?
  activities     Activity[]
  organization   Organization? @relation(fields: [organizationId], references: [id])
}

model Lead {
  id        String   @id @default(cuid())
  name      String
  email     String?
  source    String?
  status    String   @default("NEW")
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Deal {
  id             String       @id @default(cuid())
  title          String
  amount         Decimal?     @db.Decimal(10, 2)
  currency       String       @default("GBP")
  stage          String
  closeDate      DateTime?
  organizationId String
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  organization   Organization @relation(fields: [organizationId], references: [id])
}

model Task {
  id           String    @id @default(cuid())
  title        String
  description  String?
  dueDate      DateTime?
  completed    Boolean   @default(false)
  assignedToId String?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  assignedTo   User?     @relation("AssignedTo", fields: [assignedToId], references: [id])
}

model Activity {
  id        String   @id @default(cuid())
  type      String
  notes     String?
  date      DateTime @default(now())
  contactId String?
  contact   Contact? @relation(fields: [contactId], references: [id])
}

model Bank {
  id           String        @id @default(cuid())
  bankName     String
  bankType     String
  swiftBic     String?
  bankCode     String?
  website      String?
  supportEmail String?
  supportPhone String?
  bankAddress  String?
  bankCity     String?
  bankPostcode String?
  bankCountry  String?
  isActive     Boolean       @default(true)
  notes        String?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  accounts     BankAccount[]
}

model BankAccount {
  id                String            @id @default(cuid())
  accountName       String
  currency          String
  accountNumber     String?
  iban              String?
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt
  accountNumberUK   String?
  accountType       String
  availableBalance  Decimal?          @db.Decimal(15, 2)
  bankId            String
  bcNumber          String?
  currentBalance    Decimal?          @db.Decimal(15, 2)
  ibanCH            String?
  isActive          Boolean           @default(true)
  isPrimary         Boolean           @default(false)
  lastBalanceUpdate DateTime?
  notes             String?
  routingNumber     String?
  sortCode          String?
  swiftBic          String?
  order             Int               @default(0)
  wireRoutingNumber String?
  bank              Bank              @relation(fields: [bankId], references: [id], onDelete: Cascade)
  transactions      BankTransaction[]

  @@index([bankId])
  @@index([currency])
}

model CryptoWallet {
  id                 String              @id @default(cuid())
  walletName         String
  walletType         String
  blockchain         String
  network            String
  asset              String
  assetType          String
  contractAddress    String?
  walletAddress      String              @unique
  provider           String?
  currentBalance     Decimal?            @db.Decimal(25, 8)
  balanceUSD         Decimal?            @db.Decimal(15, 2)
  lastBalanceUpdate  DateTime?
  isMultiSig         Boolean             @default(false)
  requiredSignatures Int?
  isActive           Boolean             @default(true)
  notes              String?
  createdAt          DateTime            @default(now())
  updatedAt          DateTime            @updatedAt
  transactions       CryptoTransaction[]

  @@index([blockchain])
  @@index([asset])
}

model CryptoTransaction {
  id            String       @id @default(cuid())
  walletId      String
  txHash        String       @unique
  type          String
  amount        Decimal      @db.Decimal(25, 8)
  asset         String
  amountUSD     Decimal?     @db.Decimal(15, 2)
  exchangeRate  Decimal?     @db.Decimal(15, 8)
  fromAddress   String?
  toAddress     String?
  networkFee    Decimal?     @db.Decimal(25, 8)
  networkFeeUSD Decimal?     @db.Decimal(15, 2)
  status        String
  confirmations Int?
  blockNumber   String?
  timestamp     DateTime
  category      String?
  description   String?
  reference     String?
  metadata      String?
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  wallet        CryptoWallet @relation(fields: [walletId], references: [id], onDelete: Cascade)

  @@index([walletId])
  @@index([timestamp])
}

model BankTransaction {
  id              String         @id @default(cuid())
  externalId      String?
  date            DateTime
  description     String
  amount          Decimal        @db.Decimal(15, 2)
  currency        String
  fee             Decimal?       @db.Decimal(10, 2)
  status          String?
  category        String?
  reference       String?
  hash            String         @unique
  bankAccountId   String
  bankStatementId String?
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  counterparty    String?
  merchant        String?
  balanceAfter    Decimal?       @db.Decimal(15, 2)
  exchangeRate    Decimal?       @db.Decimal(15, 8)
  type            String?
  attachments     Attachment[]
  bankAccount     BankAccount    @relation(fields: [bankAccountId], references: [id])
  bankStatement   BankStatement? @relation(fields: [bankStatementId], references: [id])
}

model BankStatement {
  id           String            @id @default(cuid())
  filename     String
  uploadedAt   DateTime          @default(now())
  fileHash     String?
  transactions BankTransaction[]
}

model Attachment {
  id            String           @id @default(cuid())
  path          String
  fileType      String?
  originalName  String?
  transactionId String?
  uploadedAt    DateTime         @default(now())
  extractedData Json?
  fileHash      String?
  transaction   BankTransaction? @relation(fields: [transactionId], references: [id])
}

model Asset {
  id           String   @id @default(cuid())
  name         String
  purchaseDate DateTime
  cost         Decimal
  currency     String
  type         String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model FiscalYear {
  id          String          @id @default(cuid())
  year        Int             @unique
  startDate   DateTime
  endDate     DateTime
  isClosed    Boolean         @default(false)
  obligations TaxObligation[]
}

model TaxObligation {
  id              String      @id @default(cuid())
  type            String
  status          String      @default("PENDING")
  periodStart     DateTime?
  periodEnd       DateTime?
  dueDate         DateTime
  amountEstimated Decimal?    @db.Decimal(15, 2)
  amountActual    Decimal?    @db.Decimal(15, 2)
  fiscalYearId    String?
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  fiscalYear      FiscalYear? @relation(fields: [fiscalYearId], references: [id])
}

model ComplianceEvent {
  id          String   @id @default(cuid())
  title       String
  description String?
  date        DateTime
  type        String
  isCompleted Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Invoice {
  id             String        @id @default(cuid())
  number         String        @unique
  date           DateTime      @default(now())
  dueDate        DateTime
  status         String        @default("DRAFT")
  subtotal       Decimal       @db.Decimal(15, 2)
  taxRate        Decimal       @default(0) @db.Decimal(5, 2)
  taxAmount      Decimal       @db.Decimal(15, 2)
  total          Decimal       @db.Decimal(15, 2)
  currency       String        @default("GBP")
  organizationId String
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  organization   Organization  @relation(fields: [organizationId], references: [id])
  items          InvoiceItem[]
}

model InvoiceItem {
  id          String  @id @default(cuid())
  description String
  quantity    Decimal @db.Decimal(10, 2)
  unitPrice   Decimal @db.Decimal(15, 2)
  total       Decimal @db.Decimal(15, 2)
  invoiceId   String
  invoice     Invoice @relation(fields: [invoiceId], references: [id], onDelete: Cascade)
}

model CompanySettings {
  id                      String    @id @default(cuid())
  companyName             String
  companyNumber           String    @unique
  incorporationDate       DateTime
  registeredAddress       String
  registeredCity          String
  registeredPostcode      String
  registeredCountry       String    @default("United Kingdom")
  tradingAddress          String?
  tradingCity             String?
  tradingPostcode         String?
  companyType             String
  sicCodes                String?
  financialYearEnd        String
  accountsNextDueDate     DateTime?
  confirmationNextDueDate DateTime?
  vatRegistered           Boolean   @default(false)
  vatNumber               String?
  vatRegistrationDate     DateTime?
  vatScheme               String?
  vatReturnFrequency      String?
  payeReference           String?
  corporationTaxReference String?
  utr                     String?
  directors               String?
  companySecretary        String?
  shareCapital            Decimal?  @db.Decimal(15, 2)
  numberOfShares          Int?
  accountingSoftware      String?
  accountingMethod        String?
  contactEmail            String?
  contactPhone            String?
  website                 String?
  notes                   String?
  createdAt               DateTime  @default(now())
  updatedAt               DateTime  @updatedAt
  aiProvider              String    @default("openai")
}

model DeletedTransaction {
  id              String   @id @default(cuid())
  originalId      String?
  amount          Decimal  @db.Decimal(15, 2)
  currency        String
  description     String
  date            DateTime
  bankAccountName String?
  bankName        String?
  deletedAt       DateTime @default(now())
  deletedBy       String?
  reason          String?
  fullSnapshot    String?
}

model TransactionCategory {
  id        String   @id @default(cuid())
  name      String   @unique
  color     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ComplianceDocument {
  id                String          @id @default(cuid())
  filename          String
  fileType          String?
  documentType      String?
  path              String
  size              Int?
  isProcessed       Boolean         @default(false)
  vectorId          String?
  fiscalYear        String?
  uploadedBy        String?
  uploadedAt        DateTime        @default(now())
  documentDate      DateTime?
  extractedData     Json?
  fileHash          String?
  isSuperseded      Boolean         @default(false)
  strategicInsights String?
  userNotes         String?
  supersededById    String?
  chunks            DocumentChunk[]
}

model DocumentChunk {
  id         String             @id @default(cuid())
  documentId String
  content    String
  tokenCount Int?
  embedding  String?
  createdAt  DateTime           @default(now())
  document   ComplianceDocument @relation(fields: [documentId], references: [id], onDelete: Cascade)

  @@index([documentId])
}
